<table class="table table-striped">
  <tr>
    <th>Product Name</th>
    <th>Price</th>
    <th>Options</th>
    <th>For Sale</th>
  </tr>
    <% @rs.each do |row| %>
      <% id = row['id'] %>
  <tr>
    <td><%= row["name"] %></td>
    <td><%= row["price"] %></td>
    <td><a class="btn btn-mini btn-warning" href="../products/<%= row["id"] %>/edit">Edit</a></td>
    <% if row["on_sale"] == "t" %>
      <td><img src="../for-sale.jpg" /></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
   <% end %>
</table>
